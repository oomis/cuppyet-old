


<div class="row">
  <div class="col-sm-6">
    <h1>Posts</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_post_path, class: 'btn btn-primary' do %>
    Add New Post
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>User</th>
            <th>Item</th>
            <th>Location</th>
            <th>Image</th>
            <th>Category</th>
            <th>Desc</th>
            <th>likes</th>
            
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <%= content_tag :tr, id: dom_id(post), class: dom_class(post) do %>
          
            <td><%= link_to post.user.name, post %></td>
          

                      <td><%= post.status.name%></td>
                      <td><%= post.item %></td>
                      <td><%= post.location %></td>
                      <td><%= post.image %></td>
                      <td><%= post.category.name %></td>
                      <td><%= post.desc %></td>
                      <td><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
